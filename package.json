{
    "name": "hydra-cardano-yaci",
    "version": "1.0.0",
    "description": "Automation and tooling for Cardano Hydra/Yaci devnet workflows.",
    "main": "index.js",
    "scripts": {
        "setup:devkit": "bash ./scripts/devnet/install-yaci-devkit.sh",
        "start:devnet": "bash ./scripts/devnet/start-devnet.sh",
        "stop:devnet": "bash ./scripts/devnet/stop-devnet.sh",
        "bridge:node-sock": "bash ./scripts/devnet/bridge-node-sock-with-socat.sh",
        "setup:cardano-cli": "bash ./scripts/binary_setup/setup-cardano-cli.sh",
        "setup:hydra-node": "bash ./scripts/binary_setup/setup-hydra-node.sh",
        "setup:docker:cardano-cli": "bash ./scripts/docker_setup/setup-cardano-cli-docker.sh",
        "setup:docker:hydra-node": "bash ./scripts/docker_setup/setup-hydra-node-docker.sh",
        "generate-keys": "bash ./scripts/generate-keys.sh",
        "publish-scripts": "bash ./scripts/publish-hydra-scripts.sh",
        "publish-scripts:docker": "bash ./scripts/publish-hydra-scripts-docker.sh",
        "install:prerequisites": "bash ./scripts/utils/install-prerequisites.sh",
        "setup:directories": "bash ./scripts/utils/setup-directories.sh",
        "hydra:start": "bash ./scripts/hydra_binary/start-hydra-nodes.sh",
        "hydra:stop": "bash ./scripts/hydra_binary/stop-hydra-nodes.sh",
        "tui:start": "bash ./scripts/hydra_binary/start-hydra-tui.sh",
        "hydra:start:docker": "bash ./scripts/hydra_docker/start-hydra-nodes-docker.sh",
        "hydra:stop:docker": "bash ./scripts/hydra_docker/stop-hydra-nodes-docker.sh",
        "tui:start:docker": "bash ./scripts/hydra_docker/start-hydra-tui-docker.sh"
    },
    "keywords": [
        "cardano",
        "hydra",
        "yaci",
        "devnet",
        "automation"
    ],
    "author": "Arpit Sharma",
    "license": "MIT",
    "dependencies": {
        "yaci-devkit": "^0.7.0"
    },
    "engines": {
        "node": ">=20.8.0"
    }
}